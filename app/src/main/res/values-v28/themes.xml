<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupMenu" parent="@style/Theme.AppCompat">
        <item name="android:overlapAnchor">true</item>
        <item name="android:background">@drawable/rounding_popup_menu</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:popupMenuStyle">@drawable/rounding_popup_menu</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">14sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/chalk_color</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">#80EEEEEE</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/chalk_color</item>
        <item name="android:background">@color/chalk_color</item>
        <item name="android:queryBackground">@android:color/transparent</item>

        <item name="searchIcon">@drawable/ic_toolbar_search_new</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar" >
        <!-- Text Size -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColorSecondary">@color/chalk_color</item>
        <item name="android:textColorPrimary">@color/chalk_color</item>
        <item name="android:popupBackground">@color/choco_milk</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator" >
        <!-- Color Full Stars -->
        <item name="android:progressTint">@color/choco_milk</item>
        <!-- Color Non Full Stars -->
        <item name="android:progressBackgroundTint">@color/chalk_color</item>
        <!-- Color Border Stars -->
        <item name="android:secondaryProgressTint">@color/choco_milk</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/choco_milk</item>
    </style>
</resources>