<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chalk_color"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

    <TextView
        android:id="@+id/one_movie_text_title_franchise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="2dp"
        android:paddingEnd="4dp"
        android:text="TextView"
        android:textColor="@color/grey_dark"
        android:textSize="24sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/one_movie_genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/one_movie_poster"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/one_movie_text_rating_franchise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:gravity="end"
        android:paddingStart="2dp"
        android:text="TextView"
        android:textColor="@color/grey_dark"
        app:layout_constraintBottom_toBottomOf="@+id/one_movie_poster"
        app:layout_constraintStart_toEndOf="@+id/one_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/one_movie_genre" />

    <TextView
        android:id="@+id/one_movie_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:paddingStart="2dp"
        android:text="TextView"
        android:textColor="@color/grey_dark"
        app:layout_constraintBottom_toTopOf="@+id/one_movie_text_rating_franchise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/one_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/one_movie_text_title_franchise" />

    <TextView
        android:id="@+id/one_movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:paddingStart="8dp"
        android:text="TextView"
        android:textColor="@color/grey_dark"
        app:layout_constraintBottom_toBottomOf="@+id/one_movie_text_rating_franchise"
        app:layout_constraintStart_toEndOf="@+id/one_movie_stars"
        app:layout_constraintTop_toTopOf="@+id/one_movie_text_rating_franchise" />

    <ImageView
        android:id="@+id/one_movie_poster"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_image" />

    <ImageView
        android:id="@+id/one_movie_stars"
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:alpha="0.5"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/one_movie_text_rating_franchise"
        app:layout_constraintStart_toEndOf="@+id/one_movie_text_rating_franchise"
        app:layout_constraintTop_toTopOf="@+id/one_movie_text_rating_franchise"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_wish_list_black" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="one_movie_poster"
        tools:layout_editor_absoluteY="200dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/choco_milk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier4" />

</androidx.constraintlayout.widget.ConstraintLayout>