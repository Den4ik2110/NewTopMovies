<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingBottom="18dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

    <TextView
        android:id="@+id/one_movie_text_title_franchise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:paddingStart="8dp"
        android:singleLine="false"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="@+id/one_movie_poster"
        app:layout_constraintStart_toStartOf="@+id/one_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/one_movie_poster"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/one_movie_fext_rating_franchise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:gravity="end"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="@+id/one_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/one_movie_poster" />

    <TextView
        android:id="@+id/one_movie_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:ellipsize="end"
        android:paddingStart="8dp"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#CDCBCB"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/one_movie_poster"
        app:layout_constraintStart_toStartOf="@+id/one_movie_text_title_franchise"
        app:layout_constraintTop_toBottomOf="@+id/one_movie_text_title_franchise" />

    <ImageView
        android:id="@+id/one_movie_poster"
        android:layout_width="120dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_image" />

</androidx.constraintlayout.widget.ConstraintLayout>